//超链接样式
.post-body p a {
  color: #0593d3;
  border-bottom: none;
  &:hover {
    color: #ff79bc;
    text-decoration: underline;
  }
}




//返回顶部按钮样式
.back-to-top {
  box-sizing: border-box;
  position: fixed;
  bottom: $b2t-position-bottom;
  right: $b2t-position-right;
  z-index: $zindex-5;
  padding: 0 6px;
  width: 25px;
  background: $b2t-bg-color;
  font-size: $b2t-font-size;
  opacity: $b2t-opacity;
  color: $b2t-color;
  cursor: pointer;
  text-align: center;
  -webkit-transform: translateZ(0);
  transition-property: bottom;
  the-transition();

  +mobile() {
    display: none;
  }
  +tablet() {
    display: none;
  }

  &.back-to-top-on {
    bottom: $b2t-position-bottom-on;
  }
}
